{
  "name": "webhook/processor",
  "description": "Webhook processor with Docker, Nginx and Monolog logging",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "monolog/monolog": "^3.5",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "8.3"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check": "php -l src/index.php"
  }
}